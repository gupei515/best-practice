{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build",
        "target": "es6",
        "module": "esNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "incremental": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "composite": true,
        "paths": {
            "~*": ["src/*"],
            "test-library": ["test/testing-library.ts"]
        }
    }
}
